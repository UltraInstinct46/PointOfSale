<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".Activity.DistributorViewActivity">

    <EditText
        android:id="@+id/nama_distributor_view_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Distributor"/>
    <EditText
        android:id="@+id/alamat_view_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Alamat"/>
    <EditText
        android:id="@+id/no_telp_view_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="No Telp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/update_distributor"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Update"/>
        <Button
            android:id="@+id/delete_distributor"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Delete"/>
    </LinearLayout>
</LinearLayout>